<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<%= link_to 'Back', cocktails_path %>

<div class="container">
  <div class="row">
    <h2 class="text-center">Ingredients <small><%= link_to "add", new_cocktail_dose_path(@cocktail) %></small></h2>
    <ul class="list-unstyled">
      <% @cocktail.doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %>
      <p><%= link_to "Delete", cocktail_dose_path(dose), method: :delete%></p>
      </li>
      <% end %>
    </ul>
  </div>
</div>
