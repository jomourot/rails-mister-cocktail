<h1>My cocktails:</h1>

<table>
  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><h4><%= cocktail.name %></h4></td>
        <td><%= link_to "See details", cocktail_path(cocktail) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="container"></div>
<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>

